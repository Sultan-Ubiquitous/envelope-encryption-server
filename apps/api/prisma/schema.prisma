generator client {
  provider      = "prisma-client-js"
  url      = env("DATABASE_URL")
}


datasource db {
  provider = "postgresql"
}

model Transaction {
  id           String   @id
  partyId      String   @map("party_id")
  createdAt    DateTime @map("created_at")

  // Encrypted payload fields
  payloadNonce String   @map("payload_nonce")
  payloadCt    String   @map("payload_ct")
  payloadTag   String   @map("payload_tag")

  // Wrapped DEK fields
  dekWrapNonce String   @map("dek_wrap_nonce")
  dekWrapped   String   @map("dek_wrapped")
  dekWrapTag   String   @map("dek_wrap_tag")

  // Algorithm and version
  alg          String
  mkVersion    Int      @map("mk_version")

  @@index([partyId])
  @@map("transactions")
}
